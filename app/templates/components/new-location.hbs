{{#if addNewLocation}}
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name"}}
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>
    <div class="form-group">
      <label for="latitude">Latitude</label>
      {{input value=latitude id="latitude"}}
    </div>
    <div class="form-group">
      <label for="longitude">Longitude</label>
      {{input value=longitude id="longitude"}}
    </div>
    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category"}}
    </div>
    <div class="form-group">
      <label for="website">Website</label>
      {{input value=website id="website"}}
    </div>
    <div class="form-group">
      <label for="streetview">Street View Link</label>
      {{input value=streetview id="streetview"}}
    </div>
    <button {{action 'saveLocation' location}}>Save</button>
  </form>
{{else}}
  <button {{action 'locationFormShow'}}>New Location</button>
{{/if}}
